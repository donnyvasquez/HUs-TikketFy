<%- include('layout') %>
  <div class="container my-5">
    <h1 class="text-center mb-4">Price Types Management</h1>

    <!-- Accordion -->
    <div class="accordion" id="priceTypeAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingPriceTypes">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePriceTypes"
            aria-expanded="true" aria-controls="collapsePriceTypes">
            Price Types
          </button>
        </h2>
        <div id="collapsePriceTypes" class="accordion-collapse collapse show" aria-labelledby="headingPriceTypes"
          data-bs-parent="#priceTypeAccordion">
          <div class="accordion-body">
            <!-- Buttons -->
            <div class="mb-2 text-end">
              <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#entitySearchModal">
                Add Price Types
              </button>
              <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#createPriceTypeModal">
                Create Price Type
              </button>
            </div>
            <!-- Table -->
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Sale Mode</th>
                  <th>Barcode</th>
                  <th>Service Charge</th>
                  <th>Retail Price</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- Example Row -->
                <tr>
                  <td>Type 1</td>
                  <td>Weekly Schedule</td>
                  <td>QR</td>
                  <td><input type="number" class="form-control form-control-sm" placeholder="0.00"></td>
                  <td><input type="number" class="form-control form-control-sm" placeholder="0.00"></td>
                  <td class="text-end">
                    <button class="btn  btn-outline-danger btn-sm"><i class="bi bi-trash3"></i></button>
                  </td>
                </tr>
              </tbody>
            </table>
            
          </div>
        </div>
      </div>
    </div>

    <!-- Modal: Entity Search -->
    <div class="modal fade" id="entitySearchModal" tabindex="-1" aria-labelledby="entitySearchModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="entitySearchModalLabel">Search Price Types</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Keyword Search -->
            <div class="mb-3">
              <label for="keywordSearch" class="form-label">Keyword Search</label>
              <input type="text" id="keywordSearch" class="form-control form-control-sm" placeholder="Enter keywords">
            </div>
            <!-- Entity Search List -->
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                Default checkbox
                <p class="mb-0 fw-lighter fst-italic text-body-tertiary">Lighter weight text (relative to the parent element).</p>
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
              <label class="form-check-label" for="flexCheckDefault2">
                Default checkbox
                <p class="mb-0 fw-lighter fst-italic text-body-tertiary">Lighter weight text (relative to the parent element).</p>
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault3">
              <label class="form-check-label" for="flexCheckDefault3">
                Default checkbox
                <p class="mb-0 fw-lighter fst-italic text-body-tertiary">Lighter weight text (relative to the parent element).</p>
              </label>
            </div>
                    
                  
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal">Update</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal: Create Price Type -->
    <div class="modal fade" id="createPriceTypeModal" tabindex="-1" aria-labelledby="createPriceTypeModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createPriceTypeModalLabel">Create Price Type</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Form -->
            <form>
              <div class="row">
                <div class="col-9">
                  <div class="mb-3">
                    <label for="priceTypeName" class="form-label">Name</label>
                    <input type="text" id="priceTypeName" class="form-control form-control-sm" required>
                  </div>
                  <div class="mb-3">
                    <label for="saleMode" class="form-label">Sale Mode</label>
                    <select id="saleMode" class="form-select form-select-sm">
                      <option value="weekly">Weekly Schedule</option>
                      <option value="daily">Daily</option>
                      <option value="specific-date">Specific Date</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="barcodeOptions" class="form-label">Barcode Options</label>
                    <div class="d-flex">
                      <select id="barcodeType" class="form-select form-select-sm me-2">
                        <option>QR</option>
                        <option>Code 128</option>
                        <option>Code 39</option>
                      </select>
                      <select id="barcodeScale" class="form-select form-select-sm me-2">
                        <option>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                      </select>
                      <select id="barcodeThickness" class="form-select form-select-sm">
                        <option>Thin</option>
                        <option>Normal</option>
                        <option>Thick</option>
                        <option>Thickest</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <label for="priceTypeName" class="form-label">Bar code Preview</label>
                  <img class="img img-fluid img-thumbnail" src="https://w7.pngwing.com/pngs/144/829/png-transparent-qr-code-information-qr-code-android-qrcode-text-rectangle-monochrome-thumbnail.png" alt="Preview">
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
